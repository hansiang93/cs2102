  <% include ../partials/navbar %>
  <div class="main-banner">
    <h2 class="main-banner-title">Start a new project!</h2>
    <button class="btn btn-white btn-lg"
      data-toggle="modal" data-target="#loginModal">Login</button>
  </div>
