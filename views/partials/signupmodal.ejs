<div class="modal fade" id="signupModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">SIGN UP</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="suUsername" class="control-label">Username</label>
            <input type="text" class="form-control" id="suUsername"
              placeholder="Enter your username">
          </div>
          <div class="form-group">
            <label for="suFullname" class="control-label">Full Name</label>
            <input type="text" class="form-control" id="suFullname"
              placeholder="Enter your full name">
          </div>
          <div class="form-group">
            <label for="suEmail" class="control-label">Email</label>
            <input type="email" class="form-control" id="suEmail"
              placeholder="Enter your email">
          </div>
          <div class="form-group">
            <label for="suAge" class="control-label">Age</label>
            <input type="number" class="form-control" id="suAge"
              placeholder="Enter your age">
          </div>
          <div class="form-group">
            <label for="suGender" class="control-label">Gender</label>
            <select class="form-control" id="suGender">
              <option value="male">Male</option>
              <option value="female">Female</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-pink btn-block" data-dismiss="modal">Confirm</button>
        <button class="btn btn-default btn-block" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
